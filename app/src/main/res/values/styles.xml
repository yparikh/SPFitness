<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/jostmed</item>
        <item name="android:fontFamily">@font/jostmed</item>>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/jostmed</item>
        <item name="android:fontFamily">@font/jostmed</item>>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/coconutCream</item>
        <item name="colorPrimary">@color/roman</item>
    </style>

</resources>
